  <body>
    <input type="checkbox" name="pjax" checked="checked" style="display:none" />

    @{ Html.RenderPartial("Auth/_TopMenu"); }

    <div class="container">
        <div class="row">
            <div style="margin-top:-18px;">
                <div class="span2" style="border-right:1px solid #ddd;">
                    <div style="padding:10px; padding-left:0px;">
                        @{ Html.RenderPartial("Auth/_LeftSideMenu");}
